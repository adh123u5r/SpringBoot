package com.user.day1.serv;

public class ServPalm {
	import java.util.List;


	import org.springframework.beans.factory.annotation.Autowired;
	import org.springframework.stereotype.Service;

	import com.user.database.Info.ModelPalm;

	import com.user.database.Tree.Repository.RepoPalm;


	@Service
	public class Serv {
		

			@Autowired
			private RepoPalm repository;
			
			public String checkLogin(String uname, String pwd) {
			    ModelPalm user = repository.findByuname(uname);
			    if (user == null) {
			      return "User Not Found";
			    }
			    else{
			    	if(user.getPwd().equals(pwd)) {	    		
			    		return "Palm Succesfull"; 
			    	}
			    	else {
			    		return "Palm Failed";
			    	}
			    }
			}
			public ModelPalm addUser(ModelPalm game) {
				return repository.save(game);
			}
			public List<Modelpalm> getUser()
			{
				return repository.findAll();
			}
		}


}
